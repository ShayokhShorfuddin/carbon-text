{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Carbon Text",
	"patterns": [
		{
			"include": "#table"
		},
		{
			"include": "#disclosures-services"
		},
		{
			"include": "#string"
		}
	],
	"repository": {
		"table": {
			"patterns": [
				{
					"name": "table.carbontext",
					"match": "\\[(org|upstream)\\]"
				}
			]
		},
		"disclosures-services": {
			"patterns": [
				{
					"name": "disclosures-services.carbontext",
					"match": "disclosures|services"
				}
			]
		},
		"string": {
			"patterns": [
				{
					"name": "string.carbontext",
					"match": "([\"'])(?:\\\\.|(?!\\1).)*\\1"
				}
			]
		}
	},
	"scopeName": "source.carbontext"
}
